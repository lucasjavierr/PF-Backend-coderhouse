<div class="app-view">
  <header class="header">
    <h1 class="title_page">Component <span>Hardware</span></h1>
    <nav class="navbar">
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/profile">Profile</a></li>
        <li><a href="/api/docs">Docs</a></li>
        <li><a href="/products">Products</a></li>
        <li><a href='/cart/{{user.cart}}' id="cartLink">Cart <span id="cartCounter" class="cartCounter"></span></a>
        </li>
      </ul>
    </nav>
  </header>

  <section class="welcome">
    <div class="welcome-message">
      <h2>{{user.name}}</h2>
      <p>{{user.email}}</p>
      <p>{{user.role}}</p>
    </div>
    <div class="buttons-panel">
      {{#if user.isAdmin}}
      <a href="/adminPanel" class="admin-panel">Panel de administrador</a>
      {{/if}}
      <a href="/api/sessions/logout" class="button-logout">Cerrar sesión</a>
    </div>
  </section>

  <h1>Página de productos</h1>

  <h2>Formulario para crear el productos</h2>
  <form id="createProductForm" data-user-email="{{user.email}}">
    <input type="text" placeholder="Título" name="title" />
    <input type="text" placeholder="Descripción" name="description" />
    <input type="text" placeholder="Categoría" name="category" />
    <input type="text" placeholder="Imagen" name="thumbnail" />
    <input type="number" placeholder="Precio" name="price" />
    <input type="number" placeholder="Stock" name="stock" />
    <button type="submit">Agregar producto</button>
  </form>

  <h2>Listado de usuarios</h2>
  <section id="usersContainer"></section>

  <h2>Listado de productos</h2>
  <section id="productsContainer" class="productsContainer">
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/cartCounter.js"></script>
<script src="/js/adminPanel.js"></script>